
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.activiti.examples</groupId>
    <artifactId>activiti-custom-report-examples</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    
    <properties>
        <!-- Maven build properties -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.7</java.version>

        <!-- Libraries versions -->
        <activiti.app.version>1.5.0-SNAPSHOT</activiti.app.version>
        <activiti.version>5.19.0.3</activiti.version>
        <h2.version>1.3.176</h2.version>
        
        <!-- Plugin versions -->
        <plugin.eclipse.version>2.9</plugin.eclipse.version>
        <plugin.tomcat.version>2.2</plugin.tomcat.version>
        <plugin.dependency.version>2.10</plugin.dependency.version>
    </properties>
    
    <repositories>
        <repository>
            <id>alfresco.release.repo</id>
            <releases>
                <enabled>true</enabled>
            </releases>
            <name>Alfresco Enterprise Release</name>
            <url>https://artifacts.alfresco.com/nexus/content/repositories/activiti-enterprise-releases/</url>
        </repository>
        <repository>
            <id>activiti-enterprise-snapshots</id>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <name>Activiti Enterprise Snapshots</name>
            <url>https://artifacts.alfresco.com/nexus/content/repositories/activiti-enterprise-snapshots</url>
        </repository>
        <repository>
            <id>activiti-thirdparty</id>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <name>Activiti thirdparty Repository</name>
            <url>https://artifacts.alfresco.com/nexus/content/repositories/activiti-thirdparty</url>
        </repository>
    </repositories>

    <dependencies>

        <dependency>
            <groupId>com.activiti</groupId>
            <artifactId>activiti-app-logic</artifactId>
            <version>${activiti.app.version}</version>
            <type>pom</type>
        </dependency>
        
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>${h2.version}</version>
        </dependency>

    </dependencies>

    <!-- BUILD -->
    <build>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-eclipse-plugin</artifactId>
                <version>${plugin.eclipse.version}</version>
                <configuration>
                    <downloadSources>true</downloadSources>
                    <downloadJavadocs>true</downloadJavadocs>
                </configuration>
            </plugin>

        </plugins>

    </build>

    <profiles>
        <profile>
            <id>run-war</id>
            <properties>
                <test.datadir>${project.build.directory}/data</test.datadir>
                <test.h2.params>;AUTO_SERVER=TRUE;DB_CLOSE_ON_EXIT=FALSE;LOCK_TIMEOUT=10000;MVCC=FALSE;LOCK_MODE=0</test.h2.params>
                <test.h2.url>jdbc:h2:${test.datadir}/h2_data${test.h2.params}</test.h2.url>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>${plugin.dependency.version}</version>
                        <executions>
                            <execution>
                                <id>unpack-war</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/activiti-app</outputDirectory>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.activiti</groupId>
                                            <artifactId>activiti-app</artifactId>
                                            <type>war</type>
                                            <version>${activiti.app.version}</version>
                                        </artifactItem>
                                    </artifactItems>
                                    <excludes>**/activiti*-dev*.properties</excludes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.tomcat.maven</groupId>
                        <artifactId>tomcat7-maven-plugin</artifactId>
                        <version>${plugin.tomcat.version}</version>
                        <configuration>
                            <path>/activiti-app</path>
                            <warDirectory>${project.build.directory}/activiti-app</warDirectory>
                            <port>9999</port>
                            <protocol>org.apache.coyote.http11.Http11NioProtocol</protocol>
                            <additionalClasspathDirs>${project.build.testOutputDirectory}</additionalClasspathDirs>
                            <systemProperties>
                                <com.sun.management.jmxremote.port>4000</com.sun.management.jmxremote.port>
                                <datasource.driver>org.h2.Driver</datasource.driver>
                                <!-- <datasource.url>jdbc:h2:tcp://localhost:9092/activiti</datasource.url> -->
                                <datasource.url>${test.h2.url}</datasource.url>
                                <datasource.username>alfresco</datasource.username>
                                <datasource.password>alfresco</datasource.password>
                                <hibernate.dialect>org.hibernate.dialect.H2Dialect</hibernate.dialect>
                                <ldap.authentication.enabled>false</ldap.authentication.enabled>
                                <ldap.synchronization.full.enabled>false</ldap.synchronization.full.enabled>
                                <ldap.synchronization.differential.enabled>false</ldap.synchronization.differential.enabled>
                                <log4j.configuration>log4j-dev.properties</log4j.configuration>
                                <additional.configuration>${project.build.testOutputDirectory}</additional.configuration>
                            </systemProperties>
                            <ignorePackaging>true</ignorePackaging>
                        </configuration>
                        <executions>
                            <execution>
                                <id>run-tomcat</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>run-war</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
